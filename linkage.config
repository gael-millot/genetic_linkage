    RAW_GENOTYPE_FILE_NAME_CONF="Nantes2011_Geno_w43_w1_wo63_wo64.txt" // raw genotype file
    RAW_FREQ_FILE_NAME_CONF="freq_NFE_hg19.txt" // raw allelic frequency file
    RAW_MAP_FILE_NAME_CONF="map_hg19.txt" // raw map file. BEWARE: replace the spaces in the Header
    RAW_PEDIGREE_FILE_NAME_CONF="full_pedfile_gm_modified.pro" // raw pedigree file
    human_chr_info="hg19_grch37p5_chr_size_cumul.txt" // raw pedigree file
    //_______________________________________________________________________________________________
    // PARAMETERS FOR splitting the data because alohomora does not deal with big files
