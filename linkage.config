    //SPLIT_OUTPUT_GROUP_NAME_CONF="Group1 Group2 Group3"
    //SPLIT_OUTPUT_GENOTYPE_FILE_NAME_CONF="genotyping genotyping genotyping"
    //SPLIT_OUTPUT_FREQ_FILE_NAME_CONF="freq freq freq"
