//////// variables that will be used only in the main.nf

// variables exported to the main.nf environment. See https://www.nextflow.io/docs/latest/config.html#scope-env
env {
    //_______________________________________________________________________________________________
    // GENERAL PARAMETERS
    REPLACE_SPACE_CONF="_._" // caracter string to replace any space in files
    //_______________________________________________________________________________________________
    // INPUT FILES 
    // must be single character string
    // RAW_INPUT_DIR_CONF="/mnt/share/dyslexia/analyses/20180509_lodscore_results"
